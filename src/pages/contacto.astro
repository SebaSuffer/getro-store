---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout title="Contacto - GOTRA">
  <div class="relative flex h-auto min-h-screen w-full flex-col">
    <Header />
    
    <main class="flex-grow bg-white">
      <section class="py-20">
        <div class="mx-auto max-w-[1920px] px-6 lg:px-12">
          <div class="text-center mb-16">
            <span class="text-xs font-light uppercase tracking-[0.4em] text-black/60 mb-4 block">Contacto</span>
            <h1 class="text-4xl sm:text-5xl font-light text-black tracking-[0.05em] uppercase mb-6 font-display">
              Contacto
            </h1>
            <p class="text-black/70 font-light text-sm tracking-wide max-w-2xl mx-auto">
              Estamos aquí para ayudarte. Contáctanos por cualquier consulta.
            </p>
          </div>
          
          <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3 max-w-5xl mx-auto">
            <div class="border border-black/10 bg-white p-8 text-center">
              <span class="material-symbols-outlined text-black/60 mb-6" style="font-size: 48px; font-weight: 300;">mail</span>
              <h3 class="text-sm font-light uppercase tracking-[0.2em] text-black mb-4 font-display">Email</h3>
              <a href="mailto:contacto.gotrachile@gmail.com" class="text-black/70 hover:text-black transition-colors text-sm font-light">
                contacto.gotrachile@gmail.com
              </a>
            </div>
            
            <div class="border border-black/10 bg-white p-8 text-center">
              <span class="material-symbols-outlined text-black/60 mb-6" style="font-size: 48px; font-weight: 300;">call</span>
              <h3 class="text-sm font-light uppercase tracking-[0.2em] text-black mb-4 font-display">Teléfono</h3>
              <a href="https://wa.me/56930693754" class="text-black/70 hover:text-black transition-colors text-sm font-light">
                +56 9 3069 3754
              </a>
            </div>
            
            <div class="border border-black/10 bg-white p-8 text-center md:col-span-2 lg:col-span-1">
              <span class="material-symbols-outlined text-black/60 mb-6" style="font-size: 48px; font-weight: 300;">schedule</span>
              <h3 class="text-sm font-light uppercase tracking-[0.2em] text-black mb-4 font-display">Horario</h3>
              <p class="text-black/70 text-sm font-light">
                Lunes - Viernes<br />
                9:00 - 18:00
              </p>
            </div>
          </div>
        </div>
      </section>
    </main>
    
    <Footer />
  </div>
</BaseLayout>
