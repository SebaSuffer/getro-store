---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import LoginForm from '../components/LoginForm';
---

<BaseLayout>
  <Fragment slot="title">Login - GOTRA</Fragment>
  <Fragment slot="head">
    <meta name="robots" content="noindex, nofollow" />
    <meta name="googlebot" content="noindex, nofollow" />
  </Fragment>
  
  <div class="relative flex h-auto min-h-screen w-full flex-col">
    <Header />
    
    <main class="flex-grow bg-white">
      <section class="py-20">
        <div class="mx-auto max-w-md px-6 lg:px-12">
          <div class="mb-12 text-center">
            <h1 class="text-4xl sm:text-5xl font-light text-black tracking-[0.05em] uppercase mb-6 font-display">
              Modo Edici√≥n
            </h1>
            <p class="text-black/70 font-light text-sm">
              Accede para editar productos y contenido
            </p>
          </div>
          
          <LoginForm client:load />
        </div>
      </section>
    </main>
    
    <Footer />
  </div>
</BaseLayout>

