---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import CategoryFilters from '../components/CategoryFilters';
import PaymentMethods from '../components/PaymentMethods.astro';
import ProductLoader from '../components/ProductLoader';
import CatalogTitle from '../components/CatalogTitle';
import { getAllProducts, getProductsByCategory, getCategories } from '../data/products';

const url = Astro.url;
const categoriaParam = url.searchParams.get('categoria');
const categoria = categoriaParam ? decodeURIComponent(categoriaParam).trim() : null;

// Obtener categorías y productos desde Turso
let categories: string[] = [];
let allProducts: any[] = [];
let products: any[] = [];

try {
  console.log('[CATALOGO] Loading categories and products...');
  categories = await getCategories();
  allProducts = await getAllProducts();
  console.log(`[CATALOGO] ✅ Loaded ${allProducts.length} products, ${categories.length} categories`);

  // Excluir cadenas del catálogo (se muestran en sección separada /cadenas)
  allProducts = allProducts.filter(p => p.category !== 'Cadenas');
  
  // Filtrar productos por categoría si se especifica
  products = categoria 
    ? await getProductsByCategory(categoria)
    : allProducts;
  
  // Asegurar que no se muestren cadenas incluso si se filtra por categoría
  products = products.filter(p => p.category !== 'Cadenas');
  
  console.log(`[CATALOGO] ✅ Filtered to ${products.length} products${categoria ? ` for category: ${categoria}` : ''}`);
} catch (error: any) {
  console.error('[CATALOGO] ❌ Error loading products:', error);
  console.error('[CATALOGO] Error details:', {
    message: error.message,
    stack: error.stack,
  });
  // Continuar con arrays vacíos para que la página se renderice
  products = [];
  categories = [];
}

// En el servidor, usar stock inicial. En el cliente se actualizará
const productsWithStock = products;
---

<BaseLayout title="Catálogo - GOTRA">
  <div class="relative flex h-auto min-h-screen w-full flex-col">
    <Header />
    
    <main class="flex-grow bg-white">
      <section class="py-20">
        <div class="mx-auto max-w-[1920px] px-6 lg:px-12">
          <!-- Título dinámico que se actualiza sin recargar -->
          <CatalogTitle client:load initialCategory={categoria} />
          
          <!-- Filtros de Categoría -->
          <CategoryFilters client:load currentCategory={categoria} />
          
          <!-- Product Grid con paginación y navegación sin recargar -->
          <ProductLoader client:load initialProducts={productsWithStock} category={categoria} hidePrice={true} />
        </div>
      </section>
      <PaymentMethods />
    </main>
    
    <Footer />
  </div>
</BaseLayout>
