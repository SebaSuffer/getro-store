---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ProductCard from '../components/ProductCard';
import CategoryFilters from '../components/CategoryFilters';
import PaymentMethods from '../components/PaymentMethods.astro';
import { getAllProducts, getProductsByCategory, getCategories } from '../data/products';

const url = Astro.url;
const categoriaParam = url.searchParams.get('categoria');
const categoria = categoriaParam ? decodeURIComponent(categoriaParam).trim() : null;

// Obtener categorías y productos
const categories = getCategories();
const allProducts = getAllProducts();

// Filtrar productos por categoría si se especifica
let products = categoria 
  ? getProductsByCategory(categoria)
  : allProducts;

// En el servidor, usar stock inicial. En el cliente se actualizará
const productsWithStock = products;
---

<BaseLayout>
  <title>Catálogo - GOTRA</title>
  
  <div class="relative flex h-auto min-h-screen w-full flex-col">
    <Header />
    
    <main class="flex-grow bg-white">
      <section class="py-20">
        <div class="mx-auto max-w-[1920px] px-6 lg:px-12">
          <div class="mb-16">
            <span class="text-xs font-normal uppercase tracking-[0.4em] text-black/60 mb-4 block">Tienda</span>
            <h1 class="text-4xl sm:text-5xl font-medium text-black tracking-[0.05em] uppercase mb-6 font-display">
              {categoria ? categoria : 'Catálogo Completo'}
            </h1>
            <p class="text-black/70 font-normal text-sm tracking-wide max-w-2xl">
              Explora nuestra colección completa de joyería fina
            </p>
          </div>
          
          <!-- Filtros de Categoría -->
          <CategoryFilters client:load currentCategory={categoria} />
          
          <!-- Product Grid -->
          <div class="grid grid-cols-1 gap-12 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
            {productsWithStock.map((product) => (
              <ProductCard key={product.id} client:load product={product} />
            ))}
          </div>
          
          {productsWithStock.length === 0 && (
            <div class="text-center py-20">
              <p class="text-lg text-black/60 font-light">No hay productos disponibles en esta categoría.</p>
              <a href="/catalogo" class="mt-4 inline-block text-sm text-black/80 hover:text-black underline">
                Ver todos los productos
              </a>
            </div>
          )}
        </div>
      </section>
      <PaymentMethods />
    </main>
    
    <Footer />
  </div>
</BaseLayout>
