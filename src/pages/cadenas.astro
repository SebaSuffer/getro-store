---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ChainsViewer from '../components/ChainsViewer';
---

<BaseLayout title="Cadenas - GOTRA">
  <div class="relative flex h-auto min-h-screen w-full flex-col">
    <Header />
    
    <main class="flex-grow bg-white">
      <section class="py-20">
        <div class="mx-auto max-w-[1920px] px-6 lg:px-12">
          <div class="mb-12 text-center">
            <span class="text-xs font-light uppercase tracking-[0.4em] text-black/60 mb-4 block">Catálogo</span>
            <h1 class="text-4xl sm:text-5xl font-light text-black tracking-[0.05em] uppercase font-display mb-4">
              Cadenas
            </h1>
            <p class="text-sm font-light text-black/60 max-w-2xl mx-auto leading-relaxed">
              Explora nuestra colección de cadenas de plata 925. Haz clic en cualquier cadena para ver sus detalles y medidas.
            </p>
          </div>
          
          <ChainsViewer client:load />
        </div>
      </section>
    </main>
    
    <Footer />
  </div>
</BaseLayout>

