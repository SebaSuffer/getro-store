---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import CheckoutForm from '../components/CheckoutForm';
---

<BaseLayout>
  <Fragment slot="title">Checkout - GOTRA</Fragment>
  
  <div class="relative flex h-auto min-h-screen w-full flex-col">
    <Header />
    
    <main class="flex-grow bg-white">
      <section class="py-20">
        <div class="mx-auto max-w-[1920px] px-6 lg:px-12">
          <div class="mb-16">
            <span class="text-sm font-normal uppercase tracking-wide text-black/60 mb-4 block font-sans">Compra</span>
            <h1 class="text-3xl sm:text-4xl font-semibold text-black font-sans">
              Finalizar Compra
            </h1>
          </div>
          <CheckoutForm client:load />
        </div>
      </section>
    </main>
    
    <Footer />
  </div>
</BaseLayout>
