---
import NewsletterForm from './NewsletterForm';
import { getCategories } from '../data/products';
import { getAllCategories } from '../utils/categories';

// Obtener categorías que tienen productos
let categoriesWithProducts: string[] = [];
try {
  categoriesWithProducts = await getCategories();
  // Incluir "Cadenas" si existe
  const allCategories = await getAllCategories();
  const cadenasExists = allCategories.some(c => c.name === 'Cadenas');
  if (cadenasExists) {
    categoriesWithProducts.push('Cadenas');
  }
} catch (error) {
  console.error('[FOOTER] Error loading categories:', error);
  // Fallback: solo Colgantes y Cadenas
  categoriesWithProducts = ['Colgantes', 'Cadenas'];
}
